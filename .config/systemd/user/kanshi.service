# https://github.com/Vladimir-csp/uwsm/blob/master/example-units/kanshi.service

[Unit]
Description=Kanshi Wayland output manager
Documentation=man:kanshi(1) man:kanshi(5)
After=wayland-session@sway.desktop.target

[Service]
Type=exec
ExecStart=/usr/bin/kanshi
ExecReload=kill -SIGHUP $MAINPID
Restart=on-failure
Slice=background-graphical.slice

[Install]
WantedBy=wayland-session@sway.desktop.target
