# --- Input ---
# List input names: swaymsg -t get_inputs
input type:pointer {
	accel_profile flat
	pointer_accel 0.5
	natural_scroll enabled
	scroll_factor 2
}

input type:keyboard {
	xkb_layout us
	xkb_variant altgr-intl
	xkb_options caps:swapescape
	xkb_numlock enable
	repeat_delay 300
}

seat seat0 hide_cursor 5000
seat seat0 xcursor_theme Adwaita

# --- Output ---
# List output names: swaymsg -t get_outputs
# output <name> {
#     mode 1920x1080@60Hz # set resolution and refresh rate
#     scale 1.5           # 150% scale
#     transform 90        # 90Â° rotation
#     disable
# }
output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill

set $lock 'swaylock -f -e -c 000000'
set $screen_off 'swaymsg "output * power off"'
set $screen_on 'swaymsg "output * power on"'
set $screen_off_locked 'pgrep swaylock && swaymsg "output * power off"'
set $screen_on_locked 'pgrep swaylock && swaymsg "output * power on"'
exec swayidle -w \
	timeout 310 $lock \
	timeout 300 $screen_off resume $screen_on \
	timeout 10 $screen_off_locked resume $screen_on_locked \
	before-sleep $lock


# --- Appearance ---
font pango:sans-serif 10

bar swaybar_command waybar

smart_borders on
default_border pixel
titlebar_border_thickness 0


# --- Bindings ---
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term foot

bindsym $mod+Return exec $term
bindsym $mod+d exec j4-dmenu-desktop --dmenu='bemenu --prompt=launch' --term=$term --wrapper='swaymsg exec'
bindsym $mod+n exec makoctl dismiss
bindsym $mod+Shift+n exec makoctl restore
bindsym XF86MonBrightnessDown exec light -T 0.91
bindsym XF86MonBrightnessUp exec light -T 1.1
bindsym --locked XF86AudioPrev exec playerctl previous
bindsym --locked XF86AudioPlay exec playerctl play-pause
bindsym --locked XF86AudioNext exec playerctl next
bindsym --locked XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym --locked XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindsym --locked XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+ --limit 1.0
bindsym Print exec grimshot all file
bindsym Shift+Print exec grimshot area file
bindsym Ctrl+Print exec grimshot all clipboard
bindsym Ctrl+Shift+Print exec grimshot area clipboard

bindsym $mod+Shift+q kill
bindsym $mod+Shift+c reload

bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

bindsym $mod+v split horizontal
bindsym $mod+s split vertical

bindsym $mod+w layout toggle stacking tabbed
bindsym $mod+e layout toggle split

bindsym $mod+f fullscreen

floating_modifier $mod normal
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+Shift+s sticky toggle

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

set $system_mode '[l]ock [s]uspend [e]xit [p]oweroff [r]eboot'
mode $system_mode {
	bindsym l mode default, exec $lock
	bindsym s mode default, exec systemctl suspend
	bindsym e exec swaymsg exit
	bindsym p exec systemctl poweroff
	bindsym r exec systemctl reboot
	bindsym Return mode default
	bindsym Escape mode default
}
bindsym $mod+x mode $system_mode

mode resize {
    bindsym $left resize shrink width
    bindsym $down resize grow height
    bindsym $up resize shrink height
    bindsym $right resize grow width
    bindsym Return mode default
    bindsym Escape mode default
}
bindsym $mod+r mode resize

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Shift+1 move workspace number 1
bindsym $mod+Shift+2 move workspace number 2
bindsym $mod+Shift+3 move workspace number 3
bindsym $mod+Shift+4 move workspace number 4
bindsym $mod+Shift+5 move workspace number 5
bindsym $mod+Shift+6 move workspace number 6
bindsym $mod+Shift+7 move workspace number 7
bindsym $mod+Shift+8 move workspace number 8
bindsym $mod+Shift+9 move workspace number 9
bindsym $mod+Shift+0 move workspace number 10

include /etc/sway/config.d/*
