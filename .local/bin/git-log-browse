#!/bin/sh

GIT_SHOW='printf "%s" {} | grep --only-matching "[a-f0-9]\+" | head --lines=1 | xargs --no-run-if-empty -- git show --color=always'

git log --color=always \
	--decorate \
	--oneline \
	--graph \
	"${@}" |
	fzf	--ansi \
		--height=0 \
		--scheme=history \
		--with-shell='sh -c' \
		--preview="${GIT_SHOW}" \
		--preview-window=wrap \
		--bind 'ctrl-d:preview-half-page-down,ctrl-u:preview-half-page-up'
