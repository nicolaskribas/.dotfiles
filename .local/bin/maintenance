#!/bin/sh

yn() {
	printf '%s? [Y/n] ' "$1"
	read 'response'

	[ "$response" = 'y' ] && return 0
	return 1
}

yn 'list failed services (system level)' &&\
	systemctl --failed

yn 'list failed services (user level)' &&\
	systemctl --user --failed

yn 'show journal logs' &&\
	journalctl -b -p 4

yn 'show pacreport' &&\
	pacreport | less

yn 'update firware' &&\
	fwupdmgr update

yn 'update system' &&\
	sudo pacman -Syu

yn 'manage .pac* files' &&\
	DIFFPROG='nvim -d' pacdiff --sudo --threeway

yn 'uninstall orphan packages' &&\
	pacman -Qtdq | sudo pacman -Rns -

yn 'uninstall orphan packages and optional dependencies' &&\
	pacman -Qttdq | sudo pacman -Rns -

yn 'uninstall orphan packages (detecting cicles)' &&\
	pacman -Qqd | sudo pacman -Rsu -

yn 'remove lostfiles' &&\
	sudo lostfiles | xargs --open-tty --no-run-if-empty sudo rm -div

yn 'reboot' &&\
	systemctl reboot

exit 0
